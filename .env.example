# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/scorm_lms
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scorm_lms
DB_USER=your_username
DB_PASSWORD=your_password

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production

# Microsoft OAuth Configuration (Azure AD)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-tenant-id
MICROSOFT_CALLBACK_URL=http://localhost:5000/api/auth/microsoft/callback

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=MOE Learning Platform

# Certificate Configuration
CERTIFICATE_ISSUER=Ministry of Education - UAE
CERTIFICATE_SECRET=your-certificate-signing-secret

# Allowed Email Domains (comma-separated)
ALLOWED_EMAIL_DOMAINS=moe.sch.ae,moe.gov.ae
